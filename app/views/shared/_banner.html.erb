<div class="banner">
  <div class="container">
    <div class="jumbotron">
      <div class="row">
        <div class="col-md-6">
          <h1><%= t('.tagline') %></h1>
        </div>
        <div class="col-md-6">
          <p><%= raw t('.event_description') %></p>
          <p><%= raw t('.event_date') %></p>
          <p>
            <%= simple_form_for :registrant, url: registrants_path, remote: true, html: {class: "form-inline registration-form"} do |f| %>
              <%= f.input :name, label: false, placeholder: "your name" %>
              <%= f.input :email, label: false, placeholder: "your email" %>
              <button class="btn btn-success" type="submit">
                <i class="fa fa-rocket"></i> Register
              </button>
            <% end %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
