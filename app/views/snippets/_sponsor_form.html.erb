<%= simple_form_for Message.new, remote: true, html: {class: 'form-horizontal'} do |f| %>
<div class="form-inputs">
  <%= f.input :name, input_html: {class: 'input-xxlarge'} %>
  <%= f.input :company, input_html: {class: 'input-xxlarge'} %>
  <%= f.input :email, input_html: {class: 'input-xxlarge'} %>
  <%= f.input :message, input_html: {rows: 4, class: 'input-xxlarge'}, label: 'Tell us more' %>
</div>
<div class="form-actions">
  <%= f.submit 'Apply', class: 'btn btn-primary' %>
</div>
<% end -%>